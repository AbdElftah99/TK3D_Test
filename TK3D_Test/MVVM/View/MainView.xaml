<Window
    x:Class="TK3D_Test.MVVM.View.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TK3D_Test.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Name="M"
    Title="MainView"
    Width="370"
    Height="330"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border
        Background="#FAFAFA"
        BorderBrush="#44000000"
        BorderThickness="1"
        CornerRadius="10"
        MouseDown="Border_MouseDown">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <DockPanel
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                VerticalAlignment="Top"
                DockPanel.Dock="Top">
                <TextBlock
                    Margin="10,5,0,0"
                    DockPanel.Dock="Left"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="DarkGray"
                    Text="Turnkey 3D" />
                <ui:Button
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="Button_Click"
                    Content="X"
                    Cursor="Hand"
                    DockPanel.Dock="Right"
                    FontSize="15"
                    IsCancel="True" />
            </DockPanel>

            <GroupBox
                Grid.Row="1"
                Grid.Column="1"
                Margin="7,0">

                <GroupBox.Header>
                    <Border BorderBrush="DarkGray" BorderThickness="0,4,0,0">
                        <TextBlock Margin="0,1,0,0" Text="Creation Settings" />
                    </Border>
                </GroupBox.Header>


                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>



                    <StackPanel Grid.Row="0" VerticalAlignment="Center">



                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2">
                            <ui:TextBlock Margin="10,0" Text="Ceiling Height:" />
                            <ui:TextBox
                                Height="30"
                                Margin="10,5,10,10"
                                Text="{Binding CeilingHeight, UpdateSourceTrigger=PropertyChanged}">
                                <ui:TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="BorderBrush" Value="LightGray" />
                                        <Setter Property="BorderThickness" Value="1" />
                                        <Setter Property="Padding" Value="5" />
                                    </Style>
                                </ui:TextBox.Style>
                            </ui:TextBox>
                        </StackPanel>

                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,10">
                            <ui:TextBlock Margin="10,0" Text="Wall Finish Type:" />

                            <ComboBox
                                Height="35"
                                Margin="10,5,10,10"
                                Padding="2,2"
                                FontSize="14"
                                ItemsSource="{Binding WallFinishTypes, Mode=TwoWay}"
                                SelectedItem="{Binding SelectedWallFinishType}" />
                        </StackPanel>

                    </StackPanel>

                    <Button
                        Grid.Row="3"
                        Width="80"
                        Height="35"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        BorderBrush="DarkGray"
                        BorderThickness="1"
                        Command="{Binding DoneCommand}"
                        CommandParameter="{Binding ElementName=M}"
                        Cursor="Hand">
                        <DockPanel>
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Left"
                                Text="Create" />
                        </DockPanel>
                    </Button>
                </Grid>
            </GroupBox>


        </Grid>
    </Border>
</Window>
